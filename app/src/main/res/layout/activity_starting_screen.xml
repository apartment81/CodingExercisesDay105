<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="@dimen/padding_16"
    tools:context=".StartingScreenActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/choice_quiz"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_start_quiz"
        android:layout_centerHorizontal="true"
        android:text="@string/highscore"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_highscore_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_start_quiz"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/tv_highscore"
        android:text=""
        android:textSize="20sp" />


    <Button
        android:id="@+id/bt_start_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/bt_start_quiz" />

</RelativeLayout>